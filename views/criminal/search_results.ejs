<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../includes/head.ejs')%>
</head>
<header>
    <%-include('../includes/navigation.ejs')%>
    <link rel="stylesheet" href="/css/police/search_results.css">

</header>

<body>
    <nav class="top">

    <div class="search-bar">
    <%-include('../includes/search_bar.ejs')%>
</div>
</nav>

    <div>
        <h3 class="title"><%=page_title %></h2>
        <% if(criminals.length > 0) { %>
        <% criminals.forEach(c =>{ %>
        <div>
            <img src="/images/criminals/<%=c.photo_filename%>" alt="criminal photo">
            <span><%=c.name%></span>
            <span><%=c.id %></span>
            <span><%=c.city %></span>
            <a href="/criminal/criminal_detail/<%=c.id%>">More Info</a>
        </div>
        <% }) %>
        <% } %>
    </div>
</body>

</html>