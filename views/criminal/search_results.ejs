<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../includes/head.ejs')%>
</head>
<header>
    <%-include('../includes/navigation.ejs')%>
    <link rel="stylesheet" href="/css/criminal/search_results.css">

</header>

<body>
    <nav class="top">
    <div class="search-bar">
    <%-include('../includes/search_bar.ejs')%>
</div>
</nav>

<div class="criminals_list">
    <h3><%=page_title %></h2>
    <% if(criminals.length > 0) { %>
    <% criminals.forEach(c =>{ %>
    <div class="criminals_list_item">
        <img src="https://res.cloudinary.com/dkxhnyynn/image/upload/v1610476615/<%=c.photo_filename%>" alt="criminal photo" >
        <div>
            <div>
                <b>Name : </b>
                <span> <%=c.name%> </span>
              </div>
              <div>
                <b>ID : </b>
                <span> <%=c.id %> </span>
              </div>
              <div>
                <b>City : </b>
                <span> <%=c.city %> </span>
              </div>
        </div>
        
        <a href="/criminal/criminal_detail/<%=c.id%>">More Info</a>
    </div>
    <% }) %>
    <% } %>
</div>
</body>

</html>