<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('../includes/head.ejs')%>
  </head>
  <header>
    <%-include('../includes/navigation.ejs')%>
    <link rel="stylesheet" href="/css/criminal/addcriminal.css" />
  </header>

  <body>
    <div class="regform"><h1><%=page_title%></h1></div>
    <div class="main">
      <div><%=error_msg%></div>
      <form
        action="/criminal/<% if(isEditing) { %>edit_criminal_detail/<%=criminal.id%><% } else { %>add_criminal <% } %>"
        method="POST"
        enctype="multipart/form-data"
      >
        <div id="col">
          <div class="row">
            <label for="name">Name : </label>
            <input
              type="text"
              class="firstname"
              name="name"
              id="name"
              value="<% if(isEditing) { %><%=criminal.name%><% } %>"
              required
            />
          </div>

          <div class="row">
            <label for="dob">DOB : </label>
            <input
              type="date"
              class="dob"
              name="dob"
              id="dob"
              value="<% if(isEditing) { %><%=criminal.dob%><% } %>"
              required
            />
          </div>
          <div class="row">
            <label for="height">Height : </label>
            <input
              type="number"
              class="height"
              name="height"
              id="height"
              value="<% if(isEditing) { %><%=criminal.height%><% } %>"
              required
            />
          </div>
          <div class="row">
            <label for="weight">Weight : </label>
            <input
              type="number"
              class="weight"
              name="weight"
              id="weight"
              value="<% if(isEditing) { %><%=criminal.weight%><% } %>"
              required
            />
          </div>
          <div class="row">
            <label for="city">City : </label>
            <input
              type="text"
              class="place"
              name="city"
              id="city"
              value="<% if(isEditing) { %><%=criminal.city%><% } %>"
              required
            />
          </div>
          <div class="row">
            <label>Gender : </label>

            <input type="radio" name="gender" id="male" value="male"
            class="gender" <%= (isEditing &&
            criminal.gender==='male')?'checked':'' %>>
            <label for="male" class="GRP">male</label>
            <input type="radio" name="gender" id="female" value="female"
            class="gender" <%= (isEditing &&
            criminal.gender==='female')?'checked':'' %>>
            <label for="female" class="GRP">female</label>
          </div>
          <div class="row">
            <label for="criminal_photo">Photo : </label>
            <% if(isEditing){ %>
            <img
              src="/images/criminals/<%=criminal.photo_filename%>"
              alt="criminal photo"
              height="300px"
            />
            <div>

                <input
                  type="hidden"
                  name="old_criminal_photo"
                  id="old_criminal_photo"
                  value="<%if(isEditing) { %><%=criminal.photo_filename%><% } %>"
                />
                <% } %>
                <input
                  type="file"
                  name="criminal_photo"
                  id="criminal_photo"
                  class="photo"
                  value="<%if(isEditing) { %><%=criminal.photo_filename%><% } %>"
                  
                />
            </div>
          </div>
          <% if(isEditing) { %>
          <button type="submit">Update</button>
          <% } else { %>
          <button type="submit">Submit</button>
          <% } %>
        </div>
      </form>
    </div>
  </body>
</html>
