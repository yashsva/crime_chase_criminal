<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('../includes/head.ejs')%>
  </head>
  <header>
    <%-include('../includes/navigation.ejs')%>
    <link rel="stylesheet" href="/css/crime/crimes_det.css" />
  </header>

  <body>
    <div class="main">
      <div class="row">
        <b>ID:</b>
        <span class="id"><%=crime.id%></span>
      </div>

      <div class="row">
        <b>Date:</b>
        <span class="dob"><%=crime.date%></span>
      </div>
      <div class="row">
        <b>City:</b>
        <span class="place"><%=crime.city%></span>
      </div>
      <div class="row">
        <b>Crime Type:</b>
        <% crime.crime_type_names.forEach(name=>{ %>

        <span class="firstname"><%=name%>, </span>
        <%})%>
      </div>
      <% if(criminals.length > 0) { %>
        <div class="row">

        <b>Criminals:</b>
        <div>
          <% criminals.forEach(c =>{ %>
          <div class="criminals_list_item">
            <img
              src="https://res.cloudinary.com/dkxhnyynn/image/upload/v1610476615/<%=c.photo_filename%>"
              alt="criminal photo"
            />
            <div>
              <div>
                <b>Name : </b>
                <span> <%=c.name%> </span>
              </div>
              <div>
                <b>ID : </b>
                <span> <%=c.id %> </span>
              </div>
              <div>
                <b>City : </b>
                <span> <%=c.city %> </span>
              </div>
            </div>

            <a href="/criminal/criminal_detail/<%=c.id%>">More Info</a>
          </div>
          <% }) %>
        </div>
      </div>
        <% } %>
      <div class="row">
        <b>Description:</b>
        <span class="description"><%=crime.description%></span>
      </div>
      <div class="submit row">
        <a href="/crime/edit_crime/<%=crime.id%>">Edit</a>
      </div>
      <div class="submit row">
        <a href="/crime/delete_crime/<%=crime.id%>">Delete</a>
      </div>
    </div>
  </body>
</html>
