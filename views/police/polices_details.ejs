<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('../includes/head.ejs')%>
  </head>
  <header><%-include('../includes/navigation.ejs')%>
  <link rel="stylesheet" href="/css/police/police_details.css">
  </header>


  <body>
    <nav class="top">
    <ul>
       <li><a href="/admin/add_police_personnel">ADD POLICE</a></li>
    </ul>
    <div class="search-bar">
    <%-include('../includes/search_bar.ejs')%>
  </div>
    </nav>

    <div>
      <h3><%=page_title %></h3>
      <% if(polices.length> 0) { %> <% polices.forEach(p=>{ %>
      <div>
        <img src="/images/polices/<%=p.photo_filename%>" alt="police photo" height="310px" width="310px">
        <span> <%=p.name%> </span>
        <span> <%=p.id %> </span>
        <span> <%=p.department %> </span>
        <a href="/admin/police_personnel_info/<%=p.id%>">More Info</a>
      </div>
      <% }) %> <% } %>
    </div>
  </body>
</html>
